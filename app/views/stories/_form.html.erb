<%= render 'layouts/errors', :object => @story %>

<%= form_for @story do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :rows => '20', :cols => '100' %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
